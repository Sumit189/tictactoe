<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<body>
<center>
  <center>
    <h1 id="sitename" style="font-family: 'Roboto Slab', serif; font-size: 50px; margin-top: 5% ">TIC TAC TOE</h1>
  </center>
  <div class ="card" style="width: 50%; margin-top:2%">
    <div class="card-header">
      <h5 class="card-title d-flex justify-content-between mb-2">
        <span>Before You Start</span>
      </h5>
      <p style="color:red"><%= session[:error_msg] %></p>
    </div>
    <div class="card-body">
      <%= form_with do |form| %>
        <div class="field">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">   <%= form.label "Player 1" %> </span>
            </div>
            <%= form.text_field :Player1_Name, class: 'form-control' %>
          </div>
        </div>

        <div class="field">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default"> <%= form.label "Player 2" %></span>
            </div>
            <%= form.text_field :Player2_Name, class: 'form-control' %>
          </div>
        </div>
        </div>
        <div class ="card-footer">
          <div class="actions">
            <%= form.submit "Start Game", class: 'btn btn-success'%>
          </div>
        </div>
      <% end %>
      </div>
</center>
<p id="notice"></p>
</body>

<script>
  sessionStorage.clear();
</script>