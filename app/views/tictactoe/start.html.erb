<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<body>
<center>
  <center>
    <h1 id="sitename" style="font-family: 'Roboto Slab', serif; font-size: 50px; margin-top: 5% ">TIC TAC TOE</h1>
  </center>
  <div class ="card" style="width: 400px; margin-top:2%">
    <div class="card-header">
      <h5 class="card-title d-flex justify-content-between mb-2">
        <span>Before You Start</span>
      </h5>
      <p style="color:red"><%= session[:error_msg] %></p>
    </div>
    <div class="card-body">
      <%= form_with do |form| %>
        <div class="field" style="width: 300px">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">   <%= form.label "Player 1" %> </span>
            </div>
            <%= form.text_field :Player1_Name, class: 'form-control' %>
          </div>
        </div>

        <div class="field" style="width: 300px">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default"> <%= form.label "Player 2" %></span>
            </div>
            <%= form.text_field :Player2_Name, class: 'form-control' %>
          </div>
        </div>
        </div>
        <div class ="card-footer">
          <div class="actions">
            <%= form.submit "Start Game", class: 'btn btn-primary'%>
          </div>
        </div>
      <% end %>
      </div>
</center>
<p id="notice"></p>
</body>

<style>
body{
    background: #9796f0;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #fbc7d4, #9796f0);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #fbc7d4, #9796f0); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}


</style>