<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
<body>
<nav>
  <center>
    <div id = "menu">
      <div id = "menu2">
        <ul>
          <li style="font-family: 'Roboto Slab', serif; "><a href="/tictactoe/start" onclick="return confirm('It will delete all Match History')">Home</a></li>
          <li style="font-family: 'Roboto Slab', serif; "><a href="/games">Game</a></li>
          <li class="active" style="font-family: 'Roboto Slab', serif; "><a href="/match_history/show">Match History</a></li>
        </ul>
      </div>
    </div>
  </center>
</nav>
<br>
<center>
<div class="card rounded" style="width: 30%">
  <div class="card-header">
    <h2 class="card-title d-flex justify-content-between mb-2">
      <span>Match History</span>
    </h2>
  </div>
  <div class="card-body">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Match</th>
        <th>Winner</th>
      </tr>
      </thead>
      <tbody>
      <% @game.each do |game| %>
        <tr>
          <td><h6><%= game.id %></h6></td>
          <% if session[:player1] == game.game_result %>
              <td><h6 style="color: #d8345f"><%= game.game_result %></h6></td>
           <% else %>
            <td><h6 style="color: #588da8"><%= game.game_result %></h6></td>
            <%end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= will_paginate @game, renderer: WillPaginate::ActionView::BootstrapLinkRenderer , class: 'btn btn-primary'%>
    <h5>Overall Winner:  <%= Game.group(:game_result).order('game_result DESC').limit(1).pluck(:game_result).first %></h5>
  </div>
</div>
</center>
</body>